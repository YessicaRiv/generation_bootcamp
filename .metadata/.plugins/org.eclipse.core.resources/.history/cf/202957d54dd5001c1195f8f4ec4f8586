package ciclos;

import javax.swing.JOptionPane;

public class ciclosDoWhile {
	
	public static void main(String[] args) {
		
		String clave = "Pedro";
		
		String comparacion = "";
		
		do {
			
			comparacion = JOptionPane.showInputDialog("Introduce la contraseña, por favor");
			
			if(clave.equals(comparacion) == false) {
				System.out.printIn("La contraseña es incorrecta");
			}
			
		}while ();
	}

}while (clave.equals(comparacion);

System.out.printIn("La contraseña es correcta");

}
